<%- include("header") -%>

<h2>All Food</h2>
<div class="row">
    <% recipes.forEach(function(recipe){ %>
    <div class="col-lg-4">
    <a href="/food/<%=recipe._id%>">
      <div class="card" name="<%=recipe._id%>">
        <div class="container">
            <img src="<%=recipe.unsplashURL%>" class="card-img-top" alt="Avatar">
            <div class="middle">
              <div class="text" id="foodOptions"><%=recipe.recipeName%></div>
            </div>
          </div>
         
        
        
      </div>
      </a>
    </div>
    
    <%  }) %>
</div>
<%- include("footer") -%>